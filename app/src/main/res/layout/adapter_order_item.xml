<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_ll"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_e8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_order_pnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排号："
            android:textColor="@color/font_3" />
        <TextView
            android:id="@+id/tv_order_back"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv_order_pnum"
            android:layout_height="wrap_content"
            android:text="退货"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textColor="#d10000" />

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="状态："
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_pnum"
            android:layout_marginTop="5dp"
            android:text="订单号："
            android:textColor="@color/font_3" />
        <View
            android:id="@+id/tv_p"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_order_id"
            android:layout_marginTop="10dp"
            android:background="@color/line_d2" />

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_p"
            android:orientation="vertical"
            android:id="@+id/ll_body">
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="货品信息:"></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:background="@color/line_d2" />
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_p"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:id="@+id/ll_mbody">
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/tv_g"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_body"
            android:layout_marginTop="10dp"
            android:background="@color/line_d2" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_g"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="采购门店："
            android:textColor="@color/font_6" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:text="下单时间："
            android:textColor="@color/font_6" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <View
        android:id="@+id/tv_gg"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_order_id"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_d2" />

    <LinearLayout
        android:id="@+id/btn_ll"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="去付款"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_border_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消订单"
            android:textColor="@color/blue" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_e8" />

</LinearLayout>