<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <include layout="@layout/widget_titlebar_base" />

    <ScrollView
        android:id="@+id/p_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_pnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:text="排号：5654321"
                android:textSize="16sp"
                android:textColor="@color/font_3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_d4" />

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="商家名称："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:text="吕生鲜超市："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="订货单号："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:text="65465321321："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="下单时间："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:text="2015-5-52132："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="订单状态："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:text="已接单"
                    android:textSize="14sp"
                    android:textColor="@color/blue" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:text="货品信息"
                android:textSize="16sp"
                android:textColor="@color/font_3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_d4" />

            <LinearLayout
                android:id="@+id/items_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="合计："
                    android:textSize="14sp"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tv_allcount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:text="x52"
                    android:textSize="14sp"
                    android:textColor="@color/red" />

            </LinearLayout>


            <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="10dp"
                        android:text="收货单签名照"
                        android:textColor="@color/font_6"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_d4" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="@dimen/common_10"
                        android:layout_marginRight="@dimen/common_10"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img01"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="#eae5e5"
                            android:padding="5dp"
                            android:src="@drawable/img_order" />


                        <ImageView
                            android:id="@+id/img02"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="#eae5e5"
                            android:padding="5dp"
                            android:src="@drawable/img_order"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_10"
                        android:layout_marginRight="@dimen/common_10"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img03"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="#eae5e5"
                            android:padding="5dp"
                            android:src="@drawable/img_order"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img04"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="#eae5e5"
                            android:padding="5dp"
                            android:src="@drawable/img_order"
                            android:visibility="invisible" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_10"
                        android:layout_marginRight="@dimen/common_10"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img05"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/common_10"
                            android:layout_marginLeft="@dimen/common_10"
                            android:layout_marginRight="@dimen/common_10"
                            android:layout_marginTop="@dimen/common_10"
                            android:background="#eae5e5"
                            android:padding="5dp"
                            android:src="@drawable/img_order"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:background="#eae5e5"
                            android:src="@drawable/img_order"
                            android:visibility="invisible" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:text="收货人信息"
                android:textSize="16sp"
                android:textColor="@color/font_3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_d4" />

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="收货人："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_shou_user"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:text="x52"
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="电话："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_shou_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:text="x52"
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="地址："
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

                <TextView
                    android:id="@+id/tv_shou_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:text="x52"
                    android:textSize="14sp"
                    android:textColor="@color/font_6" />

            </LinearLayout>

            <LinearLayout android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent">
                <ImageView android:layout_width="wrap_content"
                    android:id="@+id/img_qr_code"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_order_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-25dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="订单二维码"
                    android:textSize="16sp"
                    android:textColor="@color/font_3" />
            </LinearLayout>

            <View
                android:id="@+id/tv_order_code_g"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_d4" />


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"></View>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/widget_view_loading" />

    <LinearLayout
        android:id="@+id/btn_ll"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="去付款"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_border_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消订单"
            android:textColor="@color/blue" />

    </LinearLayout>


</FrameLayout>