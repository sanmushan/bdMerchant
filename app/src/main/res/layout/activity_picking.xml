<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/base_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/widget_titlebar_base" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <LinearLayout
                    android:id="@+id/title_tabll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/o1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/o1_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:text="未拣货"
                            android:textColor="@drawable/selected_tab_blue" />

                        <TextView
                            android:id="@+id/o1_txt_num"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/o1_txt"
                            android:background="@drawable/btn_round_red"
                            android:gravity="center|center"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/o2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/o2_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:text="合单"
                            android:textColor="@drawable/selected_tab_blue" />

                        <TextView
                            android:id="@+id/o2_txt_num"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/o2_txt"
                            android:background="@drawable/btn_round_red"
                            android:gravity="center|center"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/o3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/o3_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:text="缺货"
                            android:textColor="@drawable/selected_tab_blue" />

                        <TextView
                            android:id="@+id/o3_txt_num"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/o3_txt"
                            android:background="@drawable/btn_round_red"
                            android:gravity="center|center"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/o4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/o4_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:text="已完成"
                            android:textColor="@drawable/selected_tab_blue" />

                        <TextView
                            android:id="@+id/o4_txt_num"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/o4_txt"
                            android:background="@drawable/btn_round_red"
                            android:gravity="center|center"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_gravity="bottom"
                    android:background="@color/line_d4" />

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/iv_bottom_line"
                        android:layout_width="wrap_content"
                        android:layout_height="2dip"
                        android:background="@color/blue" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edit_encode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/title_vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:persistentDrawingCache="animation" />

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/finsh_border"
                    android:gravity="center"
                    android:text="抢单"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <include layout="@layout/activity_main_leftmenu" />

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
