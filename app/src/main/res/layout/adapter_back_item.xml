<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_e8"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/order_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:id="@+id/ll_send"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/position_map_icon_map_currentposition" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:id="@+id/send_name_txt"
                android:text=""
                android:textColor="@color/font_3"
                android:textSize="@dimen/common_16" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/phone_img" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d2" />

        <TextView
            android:id="@+id/order_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="订单号："
            android:textColor="@color/font_3" />

        <TextView
            android:id="@+id/down_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="下单时间："
            android:textColor="@color/font_3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="发货人信息："
            android:textColor="@color/font_3"
            android:visibility="gone" />



        <TextView
            android:id="@+id/send_address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="发货人地址："
            android:textColor="#666666"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/send_call_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_border_orange"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:text="联系发货人"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/send_map_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_border_orange"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:text="地图导航"
                android:textColor="#666666"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/items_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/psf_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="配送费："
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/psf_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/psf_info"
                android:gravity="center_vertical|left"
                android:text=""
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/all_p"
                android:gravity="center_vertical|left"
                android:paddingRight="5dp"
                android:text="订单合计："
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/all_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:paddingRight="5dp"
                android:text="0"
                android:textColor="#e33333"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/btn_ll_g"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d2"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_d2" />

        <LinearLayout
            android:id="@+id/ll_revt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/revt_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="王大爷家 （13811112222）"
                    android:textColor="#666666" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/phone_img" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/position_map_icon_map_currentposition" />

                <TextView
                    android:id="@+id/revt_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="收货人地址："
                    android:textColor="#666666" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/revt_call_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_border_orange"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:text="联系收货人"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/revt_map_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_border_orange"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:text="地图导航"
                android:textColor="#666666"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_orange"
                android:gravity="center"
                android:padding="10dp"
                android:text="未付款"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_orange"
                android:gravity="center"
                android:padding="10dp"
                android:text="未付款"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_orange"
                android:gravity="center"
                android:padding="10dp"
                android:text="去付款"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>